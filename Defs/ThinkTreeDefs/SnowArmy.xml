		<defName>AE_SnowManConstant</defName>
		<thinkRoot Class="ThinkNode_Priority">
			<subNodes>
				<!-- Despawned -->
				<li Class="ThinkNode_Subtree">
					<treeDef>Despawned</treeDef>
				</li>
			</subNodes>
		</thinkRoot>
	</ThinkTreeDef>

</Defs>
